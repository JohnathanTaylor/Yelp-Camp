<%- include("../partials/header") %> 

<div class="container">
    <div class="column">
        
        <h1 style="text-align: center; margin-top: 40px;">Edit Comment </h1>

        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comments._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comments.text %> " name="comment[text]">    
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

</div>


<%- include("../partials/footer") %> 